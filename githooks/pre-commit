#!/bin/sh

echo "üöÄ Ejecutando verificaciones en cambios staged..."

# Obtener archivos modificados preparados para commit
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM -- '*.java')

if [ -z "$STAGED_FILES" ]; then
    echo "‚úÖ No hay archivos Java para verificar"
    exit 0
fi

echo "üîç Archivos a verificar:"
echo "$STAGED_FILES"

# Ejecutar checkstyle solo en los archivos modificados
if ! ./gradlew checkstyleMain -P checkstyle.includes="$STAGED_FILES"; then
  echo "‚ùå Checkstyle fall√≥ en los cambios propuestos."
  echo "üí° Puedes ver los detalles ejecutando: ./gradlew checkstyleMain"
  exit 1
fi

echo "‚úÖ Checkstyle aprob√≥ los cambios"
exit 0